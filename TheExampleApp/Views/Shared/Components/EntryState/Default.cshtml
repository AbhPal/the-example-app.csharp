    {
        <div class="pill pill--draft">
            @Localizer["draftLabel"]
        </div>
    }
    @if (Model.PendingChanges)
    {
        <div class="pill pill--pending-changes">
            @Localizer["pendingChangesLabel"]
        </div>
    }
</div>